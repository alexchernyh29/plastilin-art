.header-bottom
    padding-top w(55)

    &__wrap
        padding w(15) 0
        display flex
        flex-direction row
        justify-content space-between
        align-items center

    &__search
        padding w(5) w(20) w(5) w(5)
        height w(50)
        display flex
        flex-direction row
        justify-content flex-start
        align-content center
        border w(1) solid $c-grey

    &__list
        background-color $c-grey
        border none
        font-family $ff-Roboto
        font-weight 400
        font-size 14px
        line-height 32px

    &__text
        padding-left w(15)
        padding-right w(290)
        font-family $ff-Roboto
        font-weight 400
        font-size 16px
        line-height 32px
        display flex
        align-items center
        color $c-grey

    &__icon-search
        width w(20)
        display flex
        align-items center
        img
            width 100%

    &__icon
        margin 0 auto
        width w(20)
        display flex
        align-items center
        img
            width 100%

    &__button
        width w(50)
        height w(50)
        border none

    &__button-callback
        width w(220)
        height w(50)
        border none

    &__logo
        width w(200)
        img
            width 100%

    &__button-catalog
        width w(220)
        height w(50)
        background-color $c-orange
        border none
        display flex
        flex-direction row
        justify-content center
        align-items center

    &__icon-catalog
        padding-top w(5)
        width w(20)
        img
            width 100%
        
    &__menu
        padding-left w(10)
        color $c-white
        font-family $ff-Roboto
        font-weight 500
        font-size 16px
        line-height 32px

    &__menu li
        &:hover ul
            display block

    &__submenu__link
        width w(300)
        padding w(10) w(50) w(10) w(10)
        margin 0
        color $c-blue
        background-color $c-grey
        font-family $ff-Roboto
        font-weight 700
        text-align left
        font-size 16px
        line-height 32px
        border w(1) solid $c-white
        &:hover
            background-color $c-white
            border w(1) solid $c-grey

    &__submenu link
        &:hover ul
            display block

    &__submenu__item
        width w(300)
        padding w(10) w(50) w(10) w(10)
        color $c-blue
        background-color $c-grey
        font-family $ff-Roboto
        font-weight 700
        text-align left
        font-size 16px
        line-height 32px
        border w(1) solid $c-white
        &:hover
            background-color $c-white
            border w(1) solid $c-grey
    
    &__submenu
        display none
        padding-top w(20)

    &__submenu__right
        display none
        width w(300)
        padding-top w(20)


